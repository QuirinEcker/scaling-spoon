{
  "name": "implo-launcher",
  "version": "1.0.0",
  "workspaces": [
    "electron",
    "angular"
  ],
  "main": "dist/electron/src/index.js",
  "scripts": {
    "init": "npm run angular:watch",
    "start": "npm run electron:dev",
    "angular:watch": "(cd angular && npm run watch)",
    "electron:dev": "(cd electron && npm run dev)",
    "package:mac": "(cd angular && npm run build) && (cd electron && npm run package:mac)",
    "package:win": "(cd angular && npm run build) && (cd electron && npm run package:win)"
  },
  "devDependencies": {
    "electron": "^13.1.2",
    "electron-packager": "^15.2.0",
    "typescript": "^4.3.2"
  }
}
