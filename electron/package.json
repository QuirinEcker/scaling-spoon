{
  "name": "implo-launcher-electron",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && npm run install-packages && cp ../package.json ../dist/",
    "install-packages": "npm run copy && cd ../dist/electron/ && npm install --production",
    "copy": "cp package.json ../dist/electron/",
    "dev": "npm run build && electron ../dist && cp package-lock.json ../dist/electron/package-lock.json",
    "package:mac": "npm run build && electron-packager ../dist --overwrite --platform=darwin --arch=x64 --icon=images/icon.png --prune=true --out=../release",
    "package:win": "npm run build && electron-packager ../dist --overwrite --platform=win32 --arch=ia32 --icon=images/icon.png --prune=true --out=../release"
  },
  "devDependencies": {
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "onezip": "^5.0.0",
    "wget-improved": "^3.2.1"
  }
}
